<div class="p-5">
  <h1>My lists</h1>
  <div class="cards d-flex justify-content-around p-3">
    <% @lists.each do |list| %>
      <%# cards %>
      <% if list.photo.attached? == false %>
        <p></p>
      <% else %>
        <div class="card-category w-2"
        style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 700, crop: :fill %>')">
        <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
      <%# cards end%>
    <% end %>
  </div>
  <div class="p-4">
  <%= link_to "Create a new movie list", new_list_path, class: "btn btn-gradient" %>
  </div>
</div>
