<div class="p-5">
  <h1>My lists</h1>
  <div class="cards">
    <% @lists.each do |list| %>
      <%# cards %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random)">
        <p><%= link_to list.name, list_path(list) %></p>
      </div>
      <%# cards end%>
    <% end %>
  </div>
  <br>
  <div class="p-2">
  <%= link_to "Create a new movie list", new_list_path, class: "btn btn-gradient" %>
  </div>
</div>
